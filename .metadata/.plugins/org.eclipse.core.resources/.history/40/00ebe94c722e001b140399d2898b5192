package factorial;

public class FactorialMet {
	private double num;

	public double getNum() {
		return num;
	}

	public void setNum(double num) {
		this.num = num;
	}
	public double facto(double num) {
		if(num==0) {
			return 1;
		}else {
			return num*facto(num-1);
		}
		
	}

}
